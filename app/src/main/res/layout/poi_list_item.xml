<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:id="@+id/poi_list_item">

    <ImageView
        android:id="@+id/poi_list_item_image"
        android:layout_width="125dp"
        android:layout_height="125dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/poi_list_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/lato_black"
        android:text="Name"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/poi_list_item_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/poi_list_item_latitude"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/lato_black"
        android:text="coordinates"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/poi_list_item_name"
        app:layout_constraintTop_toBottomOf="@id/poi_list_item_name"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/poi_list_item_longtitude"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/lato_black"
        android:text="coordinates"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/poi_list_item_name"
        app:layout_constraintTop_toBottomOf="@id/poi_list_item_latitude"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/lato_black"
        android:text="@string/read_more"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/poi_list_item_longtitude"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>