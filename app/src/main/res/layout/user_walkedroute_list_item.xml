<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/userRoute_list_item_image"
        android:layout_width="125dp"
        android:layout_height="125dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="5dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userRoute_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/lato_black"
        android:text="@string/name"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.119"
        app:layout_constraintStart_toEndOf="@id/userRoute_list_item_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userRoute_list_item_AmountPOI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/userRoute_list_item_name"
        app:layout_constraintStart_toStartOf="@id/userRoute_list_item_name"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/lato_black"
        android:textSize="17sp"
        android:text="@string/amount_pois"/>

    <TextView
        android:id="@+id/userRoute_list_item_Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/userRoute_list_item_AmountPOI"
        app:layout_constraintStart_toStartOf="@id/userRoute_list_item_name"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/lato_black"
        android:textSize="17sp"
        android:text="@string/date"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/show_points"
        android:layout_marginBottom="5dp"
        android:textSize="15sp"
        android:fontFamily="@font/lato_black"/>
</androidx.constraintlayout.widget.ConstraintLayout>